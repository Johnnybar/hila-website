<section id="non-fiction">
    <div class="container">
        {{NFE}}
        {# {% if NFE.items %} #}
        <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase">Non-Fiction</h2>
            <h3 class="section-subheading text-muted">
                {{NFE.headline}}
            </h3>
        </div>
        <h5 class="text-center mb-5">Publications in English</h5>
        <div class="row text-left mb-5">
            <br>
            {% for item in NFE.items %}
                {% if item.hasReadmore == 'true' %}
                    <div itemscope="" itemtype="http://schema.org/Book" class="col-sm-2 border-right">
                        <h3 class="section-subheading mb-4 text-muted">
                            <details>
                                <summary>
                                    <small>
                                        <a href="{{item.link}}" target="_blank">
                                            <span itemprop="name">
                                                {{item.summary |safe}}}
                                         </a>
                                        </small>
                                    </summary>
                                    <small>
                                        {{item.details}}}
                            </small>
                                </details>

                                {% if item.additionalText  %}
                                    <br>
                                    {{item.additionalText}}
                                    {% endif %}
                            </h3>
                        </div>
                            {% if item.hasImage == 'true' %}
                                <div class="col-sm-2 border-right">
                                    <img src="{{item.src | safe}}" alt="" class="w-100">
                                </div>
                            {% endif %}
                    {% else %}
                        <div class="col-sm-2 border-right ">
                            <h3 class="section-subheading mb-4 text-muted">
                                <small>
                                    <a href="{{item.link | safe }}" target="_blank" rel="noopener noreferrer">
                                        {{item.summary | safe}}</a>
                                </small>
                            </h3>
                        </div>
                        {% if item.hasImage == 'true' %}
                            <div class="col-sm-2 border-right">
                                <img src="{{item.src |safe}}" alt="" class="w-100">
                            </div>
                        {% endif %}
                        {% if item.hasTwoImages == 'true' %}
                            <div class="col-sm-2 border-right">
                                <img src="{{item.image2src |safe}}" alt="" class="w-100">
                            </div>
                        {% endif %}
                    {% endif %}
                {% endfor %}
                {# {% endif %} #}

            </div>
        </div>

    </section>