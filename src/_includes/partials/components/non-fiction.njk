<section id="non-fiction">
    <div class="container">
        {# {% if NFE.items %} #}
        <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase">Non-Fiction</h2>
            <h3 class="section-subheading text-muted">
                {{NFE.headline}}
            </h3>
        </div>
        <h5 class="text-center mb-5">Publications in English</h5>
        <div class="row text-left mb-5">
            <br>
            {% for item in NFE.items %}
                {% if item.details %}
                    <div itemscope="" itemtype="http://schema.org/Book" class="col-sm-2 mt-5 border-right">
                        <h3 class="section-subheading mb-4 text-muted">
                            <details>
                                <summary>
                                    <small>
                                        {% if item.link %}
                                            <a href="{{item.link}}" target="_blank">
                                                <span itemprop="name">
                                                    {{item.summary |safe}}</span>
                                            </a>
                                        {% else %}
                                            <span itemprop="name">
                                                {{item.summary |safe}}</span>
                                        {% endif %}
                                    </small>
                                </summary>
                                <small>
                                    {{item.details}}
                            </small>
                            </details>

                            {% if item.additionalText %}
                                <br>
                                {{item.additionalText}}
                            {% endif %}
                        </h3>
                    </div>
                    {% if item.src %}
                        <div class="col-sm-2 mt-5 border-right zoom-items">
                            <a href="{{item.src |safe}}"><img src="{{item.src | safe}}" alt="" class="w-100"></a>
                        </div>
                    {% endif %}
                {% else %}
                    <div class="col-sm-2 mt-5 border-right ">
                        <h3 class="section-subheading mb-4 text-muted">
                            <small>
                                {% if item.link %}
                                    <a href="{{item.link | safe }}" target="_blank" rel="noopener noreferrer">
                                        {{item.summary | safe}}</a>
                                {% else %}
                                    {{item.summary | safe}}</a>
                            {% endif %}
                        </small>
                    </h3>
                </div>
                {% if item.src %}
                    <div class="col-sm-2 mt-5 border-right zoom-items">
                        <a href="{{item.src |safe}}"><img src="{{item.src |safe}}" alt="" class="w-100"></a>
                    </div>
                {% endif %}
                {% if item.image2src %}
                    <div class="col-sm-2 mt-5 border-right zoom-items">
                        <a href="{{item.src |safe}}"><img src="{{item.image2src |safe}}" alt="" class="w-100"></a>
                    </div>
                {% endif %}
            {% endif %}
        {% endfor %}
        {# {% endif %} #}

    </div>
</div>
