<section class="bg-light pb-3" id="press">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase mb-5">Press</h2>
            </div>
        </div>
        <div class="row text-center">

            <div class="col-lg-10 col-sm-10 text-left ">
                {% for item in press.items %}
                    <blockquote>
                        <p>
                            <q>
                                {% if item.isHebrew %}

                                    <bdo dir="rtl">
                                        {{item.quote}}
                                    </bdo>
                                {% else %}
                                    {{item.quote}}
                                {% endif %}
                            </q>
                        </p>
                        <footer>
                            {% if item.link %}
                                <a href="{{item.link}}" target="_blank">
                                    {{item.bottomText}}
                                </a>
                            {% else %}
                                {{item.bottomText}}
                            {% endif %}
                        </footer>

                    </blockquote>

                {% endfor %}

            </div>
        </div>
    </div>

</section>