{% if fiction.items %}
    <section class="bg-light pb-3" id="fiction">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">Fiction</h2>
                    <h3 class="section-subheading text-muted mb-5">{{fiction.headline}}
                    </h3>
                </div>
                <div class="col text-center">

                    <h5 class="mb-4">Publications in Hebrew</h5>
                    <br>

                    <div class="row text-left mr-3 zoom-items">
                        {% for item in fiction.items %}
                            {% if item.link %}
                                <div itemscope="" itemtype="http://schema.org/Book" class="col-sm-2 text-center">

                                    <h3 class="section-subheading text-muted d-flex flex-column mt-3 align-items-center text-left">
                                        <a class="portfolio-link"  href="{{item.src}}">
                                        <img class="w-75" src="{{item.src}}" alt="">
                                            <small>
                                                <span itemprop="name">
                                                    {{ item.text | safe}}

                                                </span>
                                            </small>
                                        </a>
                                    </h3>
                                </div>
                                <br>
                            {% else %}

                                <div class="col-sm-2 text-center">
                                    <h3 class="section-subheading text-muted d-flex flex-column align-items-center text-left">
                                        <a class=""  href="{{item.src}}"><img class="w-75" src="{{item.src}}" alt="">
                                        <small class="mt-3 float-right">
                                            {{ item.text | safe}}

                                        </small>
                                        </a>
                                    </h3>
                                </div>
                                <br>

                            {% endif %}
                        {% endfor %}

                    </div>
                    {# //endrow #}
                </div>
                {# //endcol text center #}
            </div>
            {# //end top row #}

        </div>
        {# //end container #}
</section>
{% endif %}