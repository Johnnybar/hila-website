<script>
$(document).on('click', 'a[href^="#"]', function (event) {
    event.preventDefault();
    $target = $(event.target); 
    
    $('html, body').animate({
        scrollTop: $($.attr(this, 'href')).offset().top
    }, 500);
    $('.nav-link').removeClass('active');
    if($(event.target).hasClass('nav-link')){      
      $target.toggleClass('active');
    }
});


</script>
